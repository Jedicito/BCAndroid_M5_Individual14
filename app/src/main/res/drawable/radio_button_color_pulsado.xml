<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Selected state -->
        <item android:state_checked="true">
            <shape android:shape="oval">
                <solid android:color="#51938B" /> <!-- Replace "#FF0000" with your desired color code for the selected state -->
                <size android:width="24dp" android:height="24dp" /> <!-- Replace with your desired size -->
            </shape>
        </item>

        <!-- Unselected state -->
        <item>
            <shape android:shape="oval">
                <solid android:color="#FFFFFF" /> <!-- Replace "#FFFFFF" with your desired color code for the unselected state -->
                <size android:width="24dp" android:height="24dp" /> <!-- Replace with your desired size -->
            </shape>
        </item>
</selector>